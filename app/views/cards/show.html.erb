<% provide(:title, 'Show card') %>

<body>
  <section id="container">
    <div class="list-group">
      <a class="list-group-item disabled">Карточка № <%= @card.id %></a>
      <a class="list-group-item"><%= @card.original_text %></a>
      <a class="list-group-item"><%= @card.translated_text %></a>
      <a class="list-group-item"><%= @card.review_date %></a>
    </div>

    <ul class="nav nav-tabs">
      <li><%= link_to 'Редактировать карточку', edit_card_path(@card.id) %></li>
      <li><%= link_to 'Назад ко всем карточкам', cards_path %></li>
      <li><%= link_to 'Удалить карточку', card_path(@card.id),
                      method: :delete,
                      data: { confirm: 'Вы уверены?' } %></li>
    </ul>

    <ul class="pager">
      <li><a href="#">когда-нибудь можно будет выбрать предыдущую</a></li>
      <li><a href="#">Когда-нибудь можно будет выбрать следующую</a></li>
    </ul>
  <section>
</body>